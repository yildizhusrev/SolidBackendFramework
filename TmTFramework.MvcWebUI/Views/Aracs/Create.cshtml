@model TmTFramework.Entities.Concrete.Arac

@{
    string hidden = "";
    ViewBag.Title = "Araç Kayıt";
    if (IsAjax)
    {
        Layout = null;
        hidden = "hidden";
    }
}


<section class="content-header @hidden">
    <h1>
        Araç Kayıt
    </h1>
</section>




@using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "POST", OnFailure="Hatali", OnSuccess = "Basarili" }, new { id = "formKapsayici" }))
{

    @Html.AntiForgeryToken()
    <section class="content">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MusteriId, "MusteriId", htmlAttributes: new { @class = "control-label " })
                        @Html.DropDownList("MusteriId", null, htmlAttributes: new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.MusteriId) })
                        @Html.ValidationMessageFor(model => model.MusteriId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Plaka, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.Plaka, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Plaka) } })
                        @Html.ValidationMessageFor(model => model.Plaka, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Marka, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.Marka, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Marka) } })
                        @Html.ValidationMessageFor(model => model.Marka, "", new { @class = "text-danger" })
                    </div>


                   

                </div>
                <div class="col-md-6">
                   

                    <div class="form-group">
                        @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Model) } })
                        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Yıl, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.Yıl, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Yıl) } })
                        @Html.ValidationMessageFor(model => model.Yıl, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
        </div>
        </div>
        <div class="box-footer">

           @Html.Partial("_FormKaydetIptalPartial", new ViewDataDictionary { { "SubmitButtonText", "Kaydet" } })
        </div>
    </section>
}



