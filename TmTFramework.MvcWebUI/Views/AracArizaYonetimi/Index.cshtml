
@{
    ViewBag.Title = "Index";

}

@section head{
    <link href="~/Content/bootstrapt-toogle-css/css/bootstrap-toggle.min.css" rel="stylesheet" />}

<section class="content-header">
    <h1>Arac Ariza Yönetimi<small>Kontrol Paneli</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">İşlemde Olan Araçlar</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Arama">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="box-body table-responsive no-padding loading " id="ajaxIndex">


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

@section scripts{
    @Html.Partial("_PartialIndexAjaxLoad")

<script src="~/Scripts/bootstrap-toogle-js/bootstrap-toggle.min.js"></script>
   <script type="text/javascript">
       @*x= personelId bilgisi(Guid veya null) /// y=arizadurumu(true veya false) // z = arizaAracKayitId (Guid)*@
       isDurumu = function (x, y, z) {
               arizaKayitGuncelle(z)
       }


       arizaKayitGuncelle = function (z) {
           
           MustangModal.prop({
               title: "Personel Ata",
               animate: "toggle",
               speed: 300,
               width: 950,
               escapeClose: false,
               onClose: function () {
                   Listele();
               }
           }).load('@Url.Action("ArizaKayitGuncelle")/'+z).open();
       }

      
</script>
}




