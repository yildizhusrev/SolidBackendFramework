@section scripts{
    @Html.Partial("_PartialIndexAjaxLoad")
    <script src="/Scripts/bootstrap-toogle-js/bootstrap-toggle.min.js"></script>

    <script type="text/javascript">

        isDurumu = function (x, y, z) {
            arizaKayitGuncelle(z)
        }


        arizaKayitGuncelle = function (z) {

            MustangModal.prop({
                title: "Personel Ata",
                animate: "toggle",
                speed: 300,
                width: 950,
                escapeClose: false,
                onClose: function () {
                    Listele();
                }
            }).load('/AracArizaYonetimi/ArizaKayitGuncelle/' + z).open();
        }


    </script>
}