@model List<TmTFramework.Entities.Concrete.Personel>
    @{ Layout = null;}

<table class="table table-hover">
    <thead>
    <tr>
        <th>
            TC
        </th>
        <th>
          Ad Soyad
        </th>

        <th>
           Telefon
        </th>
        <th>
           Ünvan
        </th>
        <th>
           Adres
        </th>
        <th class="text-right">
            <button class="btn btn-sm btn-primary btn-sm m-modal"
                    onclick="Ekle()">
                <i class="fa fa-plus"></i> Yeni Ekle
            </button>       
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdSoyad)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unvan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td class="text-right">

                    <button class="btn btn-success btn-sm m-modal"
                            onclick="Duzenle('@item.Id')">
                        Düzenle
                    </button>

                    <button class="btn btn-danger btn-sm m-modal"
                            onclick="Sil('@item.Id')">
                        Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("_PartialAjaxCUD", new ViewDataDictionary { { "Baslik", "Araç" } })